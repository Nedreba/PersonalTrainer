<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bignerdranch.android.personaltrainer">

    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/dumbbell_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/dumbbell_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CustomersActivity" />
        <activity android:name=".CustomerInfoActivity" />
        <activity android:name=".NewCustomerActivity" />
        <activity android:name=".SessionsActivity" />
        <activity android:name=".NewSessionActivity" />
        <activity android:name=".CompleteSessionActivity"></activity>
    </application>

</manifest>